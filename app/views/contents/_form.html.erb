<%= form_for @content, html: { multipart: true } do |f| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
    <label>Carica il programma dettagliato del tuo tour</label>
    <br>
    <br>

    <%= f.file_field :allegato %>
  </div>

  <br>

  <div class="field">
    <%= f.label :titolo %>
    <%= f.text_field :titolo %>
  </div>

  <div class="field">
    <%= f.label :descrizione %>
    <%= f.text_area :descrizione, class: "materialize-textarea" %>
  </div>

  <div class="field">
    <%= f.label :Prezzo_min_50_cent %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :cover %>
    <%= f.file_field :cover %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit 'Salva contenuto' , class:"btn btn-form" %>
  </div>

  <br>

<% end %>
